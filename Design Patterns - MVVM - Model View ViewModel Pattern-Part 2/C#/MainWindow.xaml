<Window x:Class="MVVMDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:views="clr-namespace:MVVMDemo.Views">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="460*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="2" Grid.Row="0">
            <Label Height="30" Width="400" Content="Two way binding between the View ViewModel and Model" Foreground="#FF005900" />
        </Border>

        <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="2" Grid.Row="1" Margin="0,5,0,0">
            <views:CustomerView/>
        </Border>
    </Grid>
</Window>
