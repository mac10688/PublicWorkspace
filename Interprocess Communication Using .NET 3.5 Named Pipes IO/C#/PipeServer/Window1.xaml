<Window x:Class="PipeServer.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pipe Server"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        Width="450"
        MinWidth="440"
        MaxHeight="460"
        MinHeight="460"
        FontSize="13">
  <Grid Margin="5">
    <StackPanel>
      <TextBlock Margin="15,5" Text="Data from client:" />
      <TextBox Name="tbox"
               Height="380"
               MinWidth="380"
               Width="Auto"
               Margin="10,0,10,0"
               VerticalContentAlignment="Top"
               TabIndex="11"
               BorderBrush="Black"
               BorderThickness="1"
               TextWrapping="Wrap"
               VerticalScrollBarVisibility="Auto"
               AcceptsReturn="True"
               AcceptsTab="True"
               IsReadOnly="True" />
    </StackPanel>
  </Grid>
</Window>

