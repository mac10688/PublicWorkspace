<Window x:Class="PipeClient.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pipe Client"
        Height="150"
        MinHeight="150"
        Width="300"
        FontSize="13">
  <Grid>
    <DockPanel>
      <StackPanel DockPanel.Dock="Top">
        <TextBlock Text="Enter text to send to PipeServer:" />
        <TextBox Name="tbClientText"
                 Margin="5" />
        <StackPanel Orientation="Horizontal">
          <Button Height="23"
                  Width="75"
                  Margin="5,0"
                  Name="button1"
                  HorizontalAlignment="Left"
                  Click="button1_Click"
                  IsDefault="True">Send</Button>
          <Button Height="23"
                  Width="75"
                  Margin="5,0"
                  Name="btnClose"
                  HorizontalAlignment="Left"
                  Click="btnClose_Click">Close</Button>
        </StackPanel>
      </StackPanel>
      <Border DockPanel.Dock="Bottom"
              BorderThickness="1">
        <TextBlock Margin="0,0,0,3"
                   Name="tbStatus" />
      </Border>
      <StackPanel />
    </DockPanel>
  </Grid>
</Window>
