<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <configSections>
    
    <section name="UnityBlockConfiguration"              
             type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection,   Microsoft.Practices.Unity.Configuration"/>    
    
  </configSections>

  <UnityBlockConfiguration>
    <containers>

      <container name="ContainerOne">
        <types>

          <!-- Default (un-named) mapping for ILogger to MyLogger -->
          <type type="ILogger" mapTo="MyLogger">
            <lifetime type="SingletonType"/>
          </type>

          <!-- Named mapping for ILogger to StandardLogger-->
          <type type="ILogger" mapTo="MyLogger" name="StandardLoggerMappedInConfig">
            <lifetime type="SingletonType"/>
          </type>

          <!-- Named mapping for ILogger to SuperFastLogger-->
          <type type="ILogger" mapTo="MyFastLogger" name="SuperFastLoggerMappedInConfig">
            <lifetime type="ExternalType"/>
          </type>
        </types>
        
      </container>

      <container name="ContainerTwo">        
      </container>
      
    </containers>
    
    <typeAliases>
      <!-- Lifetime manager types -->

      <typeAlias alias="SingletonType"
            type="Microsoft.Practices.Unity.ContainerControlledLifetimeManager,       Microsoft.Practices.Unity"/>

      <typeAlias alias="ExternalType"
               type="Microsoft.Practices.Unity.ExternallyControlledLifetimeManager,   Microsoft.Practices.Unity"/>

      <!-- Custom object types -->
      
      <typeAlias alias="IMyInterfaceType" 
                 type="EnterpriseLibraryUnityBlockDemo.IMyInterface,  EnterpriseLibraryUnityBlockDemo"/>
      
      <typeAlias alias="ILogger" 
                 type="EnterpriseLibraryUnityBlockDemo.ILogger,       EnterpriseLibraryUnityBlockDemo"/>
      
      <typeAlias alias="MyLogger" 
                 type="EnterpriseLibraryUnityBlockDemo.MyLogger,      EnterpriseLibraryUnityBlockDemo"/>
      
      <typeAlias alias="MyFastLogger" 
                 type="EnterpriseLibraryUnityBlockDemo.MyFastLogger,  EnterpriseLibraryUnityBlockDemo"/>

    </typeAliases>
    
   
    
  </UnityBlockConfiguration>
  
</configuration>